{
  "manifest_version": 3,
  "name": "Spambusters: AI Review Verifier",
  "version": "1.0",
  "description": "Verifies Amazon reviews using Google Gemini AI.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://*.amazon.in/*",
    "https://*.flipkart.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
